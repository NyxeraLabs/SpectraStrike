# SpectraStrike exposed host ports (custom defaults)
HOST_PROXY_HTTP_PORT=18080
HOST_PROXY_TLS_PORT=18443
HOST_DB_PORT=15432
HOST_RABBITMQ_MGMT_PORT=15672

# Remote integration endpoints
MSF_RPC_HOST=metasploit.remote.operator
MSF_RPC_PORT=55553
MSF_RPC_SSL=true
# Optional cert pin (sha256 hex)
MSF_RPC_TLS_PINNED_CERT_SHA256=

MSF_MANUAL_BASE_URL=https://metasploit.remote.operator:5443
MSF_MANUAL_USERNAME=
MSF_MANUAL_PASSWORD=
METASPLOIT_IMAGE=metasploitframework/metasploit-framework:latest

# RabbitMQ remote broker (if not using in-stack broker)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5671
RABBITMQ_USER=spectra
RABBITMQ_PASSWORD=
RABBITMQ_SSL=true
RABBITMQ_SSL_CA_FILE=/app/docker/pki/ca.crt
RABBITMQ_SSL_CERT_FILE=/app/docker/pki/app/client.crt
RABBITMQ_SSL_KEY_FILE=/app/docker/pki/app/client.key

# Internal PostgreSQL TLS client settings
POSTGRES_SSL=true
POSTGRES_SSLMODE=verify-full
POSTGRES_SSL_ROOT_CERT=/app/docker/pki/ca.crt
POSTGRES_SSL_CERT_FILE=/app/docker/pki/app/client.crt
POSTGRES_SSL_KEY_FILE=/app/docker/pki/app/client.key

# Internal Redis mTLS client settings
REDIS_TLS=true
REDIS_TLS_CA_FILE=/app/docker/pki/ca.crt
REDIS_TLS_CERT_FILE=/app/docker/pki/app/client.crt
REDIS_TLS_KEY_FILE=/app/docker/pki/app/client.key

# Optional VectorVue pin (sha256 hex)
VECTORVUE_TLS_PINNED_CERT_SHA256=

# Vault transit signing (Sprint 10 cryptographic payload engine)
VAULT_ADDR=https://vault:8200
VAULT_TOKEN=
VAULT_NAMESPACE=
VAULT_VERIFY_TLS=true
VAULT_CA_CERT_FILE=/app/docker/pki/ca.crt
VAULT_TIMEOUT_SECONDS=5.0
VAULT_REQUIRE_HTTPS=true
VAULT_TRANSIT_MOUNT=transit
VAULT_TRANSIT_KEY_NAME=spectrastrike-orchestrator-signing
VAULT_TRANSIT_KEY_TYPE=ecdsa-p256
VAULT_TRANSIT_AUTO_CREATE_KEY=false

# Optional public egress CIDR allowlist for firewall-egress-apply
# Example: EGRESS_ALLOW_CIDRS=\"1.2.3.4/32 5.6.7.0/24\"
EGRESS_ALLOW_CIDRS=

# UI web BFF routing
ORCHESTRATOR_API_BASE_URL=http://app:8081
UI_ALLOWED_ORIGINS=https://localhost:18443

# UI auth bootstrap user (seeded on first startup)
UI_AUTH_BOOTSTRAP_USERNAME=operator
UI_AUTH_BOOTSTRAP_PASSWORD=Operator!ChangeMe123
UI_AUTH_BOOTSTRAP_FULL_NAME=Default Operator
UI_AUTH_BOOTSTRAP_EMAIL=operator@spectrastrike.local

# Optional: require registration token for new user creation
UI_AUTH_REGISTRATION_TOKEN=

# Set false only for non-TLS local dev testing (default true)
UI_AUTH_COOKIE_SECURE=true

# Demo shell controls
UI_AUTH_ENABLE_DEMO_LOGIN=true
UI_AUTH_DEMO_USERNAME=demo_operator
UI_AUTH_DEMO_FULL_NAME=Demo Operator
UI_AUTH_DEMO_EMAIL=demo@spectrastrike.local
