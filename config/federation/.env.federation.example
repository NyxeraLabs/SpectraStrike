VECTORVUE_FEDERATION_URL=https://vectorvue-telemetry-gateway.internal
VECTORVUE_FEDERATION_ENDPOINT=/internal/v1/telemetry
VECTORVUE_FEDERATION_SERVICE_IDENTITY=spectrastrike-producer

# mTLS (client auth + server trust)
VECTORVUE_FEDERATION_MTLS_CERT_FILE=/etc/spectrastrike/certs/client.crt
VECTORVUE_FEDERATION_MTLS_KEY_FILE=/etc/spectrastrike/certs/client.key
VECTORVUE_FEDERATION_MTLS_CA_FILE=/etc/spectrastrike/certs/ca.crt
VECTORVUE_FEDERATION_CLIENT_CERT_SHA256=<sha256_hex_without_colons>

# Telemetry signing
VECTORVUE_FEDERATION_SIGNING_KEY_PATH=/etc/spectrastrike/keys/telemetry_ed25519.key

# Schema controls
VECTORVUE_FEDERATION_SCHEMA_VERSION=1.0
VECTORVUE_FEDERATION_ENFORCE_SCHEMA_VERSION=true
